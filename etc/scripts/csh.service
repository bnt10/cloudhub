[Unit]
After=network-online.target

[Service]
User=root
Group=root
Environment="HOST=0.0.0.0"
Environment="PORT=8888"
Environment="BOLT_PATH=/var/lib/csh/cmp-v1.db"
Environment="CANNED_PATH=/usr/share/csh/canned"
Environment="PROTOBOARDS_PATH=/usr/share/csh/cmp-protoboards"
EnvironmentFile=-/etc/default/csh
ExecStart=/usr/bin/csh $CSH_OPTS
KillMode=control-group
Restart=on-failure

[Install]
WantedBy=multi-user.target